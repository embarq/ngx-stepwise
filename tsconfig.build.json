{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./build"
  },
  "files": [
    "./src/stepwise.module.ts",
    "./src/stepwise-next.directive.ts",
    "./src/stepwise-prev.directive.ts",
    "./src/stepwise-step.directive.ts",
    "./src/stepwise-control.abstract.ts",
    "./src/stepwise.directive.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngx-stepwise.js",
    "flatModuleId": "ngx-stepwise"
  }
}
