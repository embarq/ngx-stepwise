{
  "name": "stepwise",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run ngc && npm run bundle && npm run copy-metadata",
    "bundle": "npm run rollup:fesm && npm run rollup:umd",
    "clean": "rm -rf build && rm -rf dist",
    "copy-metadata": "find build/* -not -name '*.js' -exec cp -t dist {} +",
    "ngc": "ngc -p tsconfig.build.json",
    "rollup:fesm": "rollup build/stepwise.module.js -o dist/stepwise.module.js",
    "rollup:umd": "rollup build/stepwise.module.js -o dist/stepwise.module.umd.js --format umd --name ngxStepwise",
    "start": "ng serve --open --port 3002"
  },
  "private": true,
  "devDependencies": {
    "@angular/cli": "1.0.0",
    "@angular/common": "2.4.0",
    "@angular/compiler": "^2.4.0",
    "@angular/compiler-cli": "^2.4.0",
    "@angular/core": "2.4.0",
    "@angular/platform-browser": "2.4.0",
    "@angular/platform-browser-dynamic": "2.4.0",
    "@angular/router": "4.1.3",
    "codelyzer": "2.0.0",
    "core-js": "2.4.1",
    "rollup": "^0.41.6",
    "rxjs": "5.1.0",
    "ts-node": "2.0.0",
    "tslint": "4.5.0",
    "typescript": "^2.3.3",
    "zone.js": "0.8.4"
  },
  "peerDependencies": {
    "@angular/core": ">=2.4.0",
    "@angular/common": ">=2.4.0"
  }
}
